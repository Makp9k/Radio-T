        <!--android:padding="@dimen/activity_horizontal_margin"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="On Air notifications"-->
        <!--android:checked="@={model.notificationsEnabled}" />-->

        <!--<android.support.v7.widget.SwitchCompat-->
