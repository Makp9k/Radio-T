<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="104dp"
        android:layout_height="96dp"
        android:paddingEnd="@dimen/material_component_cards_space_between_cards"
        android:paddingRight="@dimen/material_component_cards_space_between_cards"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/accent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="3"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/news_image"
        tools:text="Apple drops to fifth place in 2017 laptop rankings | Cult of Mac" />

    <TextView
        android:id="@+id/sub_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_component_cards_space_between_cards"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/news_image"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_bias="0"
        tools:text="www.cultofmac.com - 12.04.2017 в 08:53" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="news_image, sub_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_component_cards_space_between_cards"
        android:ellipsize="end"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        tools:text="The new MacBook Pro is Apple's best laptop yet. Photo: Apple Apple’s reputation as the world’s best laptop maker took a serious hit in 2016, due to the new MacBook Pro’s adoption of USB-C. In the latest brand rankings by Laptop Magazine, Apple’s slipped five spots as Lenovo and Asus surged to theThe new MacBook Pro is Apple's best laptop yet. Photo: Apple Apple’s reputation as the world’s best laptop maker took a serious hit in 2016, due to the new MacBook Pro’s adoption of USB-C. In the latest brand rankings by Laptop Magazine, Apple’s slipped five spots as Lenovo and Asus surged to theThe new MacBook Pro is Apple's best laptop yet. Photo: Apple Apple’s reputation as the world’s best laptop maker took a serious hit in 2016, due to the new MacBook Pro’s adoption of USB-C. In the latest brand rankings by Laptop Magazine, Apple’s slipped five spots as Lenovo and Asus surged to the" />

    <TextView
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/material_component_cards_space_between_cards"
        android:paddingTop="@dimen/material_component_cards_space_between_cards"
        android:text="Подробней >"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details" />

</android.support.constraint.ConstraintLayout>