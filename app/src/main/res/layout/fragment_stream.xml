<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:minHeight="150dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_large" />

        <include
            android:id="@+id/controls"
            layout="@layout/view_stream_controls" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/news_card_shadow"
        app:layout_anchor="@+id/bottom_sheet" />

    <FrameLayout
        android:id="@id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/material_component_cards_top_and_bottom_padding"
        android:paddingBottom="@dimen/material_component_cards_top_and_bottom_padding"
        app:behavior_peekHeight="50dp"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <include
            android:id="@+id/active_news"
            layout="@layout/view_active_news_card" />

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>